<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25dp"
    android:background="@drawable/main_layout_bg"
    android:elevation="@dimen/main_elevation"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/identity_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_weight="1"
        android:textColor="@color/login_hello_t"
        android:textSize="@dimen/main_input_text1" />

    <TextView
        android:id="@+id/identity_item_btn"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/main_input_text_bg"
        android:gravity="center"
        android:text="@string/identity_item_btn"
        android:textColor="@android:color/white"
        android:textSize="@dimen/main_input_text2" />

</LinearLayout>
