<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/l_p_wx" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/main_layout_bg"
        android:elevation="@dimen/main_elevation"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_input_text_lin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:text="@string/main_input_text1"
                android:textColor="@color/login_hello_t"
                android:textSize="@dimen/main_input_text1" />

            <TextView
                android:id="@+id/main_input_text"
                android:layout_width="81dp"
                android:layout_height="26dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/main_input_text_bg"
                android:gravity="center"
                android:text="@string/main_input_text3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_input_text2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/main_input_img"
                style="@style/setting_lin_next_style"
                android:layout_marginEnd="30dp"
                android:src="@mipmap/next"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:id="@+id/main_button_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_line_bg"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_button_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="27dp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>