<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_new_item_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/main_new_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="是烤鸡和那个三个发送党纪国法雕刻时光我我见覅三跪九叩老撒给我截我无法金额死哦发苦砥砺奋进哦我很过分任务收到客服可接受的哪个接口丝黛芬妮国防科技"
        android:textColor="@color/login_hello_t"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_new_item_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="本文刊于：中华胃肠外科杂志2020,23(1):44-50 作者：陈启仪 田宏亮 杨波 林志亮 赵笛 马春..."
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/main_new_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-4-20"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/main_new_item_img"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginLeft="11dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/login_line_bg" />

</LinearLayout>
